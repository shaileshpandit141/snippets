// Zed Editor Configuration
//
// This configuration file controls various aspects of the Zed editor.
// For detailed documentation, visit: https://zed.dev/docs/configuring-zed
//
// To view default settings without modifying your custom config:
// 1. Open command palette (cmd-shift-p / ctrl-shift-p)
// 2. Run `zed: open default settings`
{
  // AI assistant configuration
  "features": {
    "inline_completion_provider": "copilot"
  },
  "assistant": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-5-sonnet-latest"
    },
    "version": "2"
  },
  // UI Layout settings
  "project_panel": {
    "dock": "right"
  },
  "ui_font_size": 16,
  "buffer_font_size": 15.0,
  "theme": {
    "mode": "system", // Follows system theme
    "light": "One Light", // Theme for light mode
    "dark": "Summercamp" // Theme for dark mode
  },
  // Application behavior
  "auto_update": true,
  "telemetry": {
    "diagnostics": true, // Send diagnostic data
    "metrics": true // Send usage metrics
  },
  "autosave": {
    "after_delay": {
      "milliseconds": 1500
    }
  },
  // Editor configuration
  "base_keymap": "VSCode",
  // Indent guides configuration
  "indent_guides": {
    "enabled": true,
    "coloring": "indent_aware"
  },
  // File handling and exclusions
  "file_scan_exclusions": [],
  // Code formatting settings
  "formatter": "language_server",
  "format_on_save": "on",
  // Language Server Protocol configurations
  "lsp": {
    "pyright": {
      "enable": true,
      "settings": {
        "python.analysis": {
          "diagnosticMode": "workspace",
          // "typeCheckingMode": "strict",
          "typeCheckingMode": "standard",
          // "typeCheckingMode": "basic",
          "useLibraryCodeForTypes": true,
          "autoImportCompletions": true,
          "reportMissingImports": true,
          "reportMissingTypeStubs": true,
          "completeFunctionParens": true,
          "autoSearchPaths": true
        },
        "python": {
          "pythonPath": ".venv/bin/python",
          "venvPath": ".venv"
        },
        "pyright.completion.snippetSupport": true,
        "python.analysis.completionMode": "full",
        "python.analysis.indexing": true,
        "python.analysis.autoImportCompletions": true
      }
    },
    "eslint": {
      "enable": true,
      "settings": {
        "rulesCustomizations": [
          {
            "rule": "*",
            "severity": "warn"
          }
        ],
        "format.enable": true,
        "workingDirectory": "frontend"
      }
    },
    "typescript-language-server": {
      "enable": true,
      "initialization_options": {
        "preferences": {
          "importModuleSpecifier": "relative",
          "importModuleSpecifierEnding": "minimal"
        },
        "format": {
          "enable": true
        }
      },
      "settings": {
        "typescript.tsdk": "../node_modules/typescript/lib"
      }
    },
    "prettier": {
      "enable": true,
      "settings": {
        "semi": true,
        "trailingComma": "es5"
      }
    }
  },
  // Terminal settings
  "terminal": {
    "alternate_scroll": "off",
    "blinking": "on",
    "copy_on_select": false,
    "dock": "bottom",
    "detect_venv": {
      "on": {
        "directories": [
          ".env",
          "env",
          ".venv",
          "venv"
        ],
        "activate_script": "default"
      }
    },
    "env": {},
    "font_size": 16,
    // "font_family": null,
    "font_features": null,
    "line_height": "comfortable",
    "option_as_meta": false,
    "button": false,
    "shell": "system",
    "toolbar": {
      "breadcrumbs": true
    },
    "working_directory": "current_project_directory"
  }
}
